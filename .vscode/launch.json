    "version": "0.2.0",
    "configurations": [
        {
            "name": "ZMS with Print Plugin",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/zmsd/main.go",
            "args": ["-c", "${workspaceFolder}/zmsd-test.yaml"],
            "buildFlags": [
                "-tags=debug",
                "-gcflags=all=-N -l",
                "-ldflags=-X szuro.net/zms/internal/config.Version=0.5.1-dev -X szuro.net/zms/internal/config.Commit=debug -X szuro.net/zms/internal/config.BuildDate=a"
            ],
            "preLaunchTask": "build-print-plugin",
            "env": {
                "ZMS_LOG_LEVEL": "debug",
                "PLUGIN_LOG_LEVEL": "DEBUG",
                "PLUGIN_DEBUG": "1"
            },
            "console": "integratedTerminal"
        }
    ]
}